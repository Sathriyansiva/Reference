<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rec_si"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:text="Si.No"
                android:textColor="#000" />

            <TextView
                android:id="@+id/rec_rdf"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:text="Rec Donation frm "
                android:textColor="#000" />

            <TextView
                android:id="@+id/rec_level"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:text="Level"

                android:textColor="#000" />

            <TextView
                android:id="@+id/rec_name"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:text="Firstname "
                android:textColor="#000" />

            <TextView
                android:id="@+id/rec_email"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:text="Email "
                android:textColor="#000" />

            <TextView
                android:id="@+id/rec_phone"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:text="Phone "
                android:textColor="#000" />

            <TextView
                android:id="@+id/rec_amount"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:text="Amount "
                android:textColor="#000" />

            <TextView
                android:id="@+id/rec_date"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:text="Date"
                android:textColor="#000" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>