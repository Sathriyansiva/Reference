<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Upgrade Stage" />


        <!--  <TextView
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:background="#0510af"
              />-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittpro"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Upload Link"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/step"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="#f9a304"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#fcfbfb"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Enter Your Transaction Hasd ID:"
                        android:textColor="#000" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/uploadlink"
                        android:gravity="center"
                        android:hint="Enter Your Transaction Hasd ID:"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bluebut"
                    android:onClick="upload"
                    android:id="@+id/upload"
                    android:text="submit"
                    android:textColor="#fcf9f9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/pass"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:onClick="pass"
                        android:text="Sponsor Name :"
                        android:textColor="#0d0d0d"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/sponsor"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:textColor="#0d0d0d"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:text="Bitcoin Address :"
                        android:textColor="#0d0d0d"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/bitcoinadd"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"

                        android:textColor="#0d0d0d"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:text="Donation Amount :"
                        android:textColor="#0d0d0d"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/donationamt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"

                        android:textColor="#0d0d0d"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Note:"
                        android:textColor="#450202"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Kindly make payment to this Wallet Address "
                        android:textColor="#413f3f"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/ed_copy"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/edittpro"
                        android:textColor="#000" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#862a2f"
                        android:onClick="copylink"
                        android:paddingLeft="1dp"
                        android:layout_marginTop="10dp"
                        android:text="Click To Copy"
                        android:textColor="#f9f7f7" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:background="#000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Upgrade Details"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sino"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:background="@drawable/text"
                                android:text="Si.No"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/uname"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:background="@drawable/text"
                                android:paddingLeft="10dp"
                                android:text="Name"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/linkname"
                                android:layout_width="700dp"
                                android:layout_height="30dp"
                                android:background="@drawable/text"
                                android:paddingLeft="10dp"
                                android:text="Link Name"

                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/ibo"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:background="@drawable/text"
                                android:text="UserId "
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/level"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text="Level"
                                android:background="@drawable/text"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/spon"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:background="@drawable/text"
                                android:text="Sponsor"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/amount"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:background="@drawable/text"
                                android:text="Amount"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/uplddat"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:background="@drawable/text"
                                android:text="Upload Date"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/approvdat"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:background="@drawable/text"
                                android:text="Approve Date"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/status"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:background="@drawable/text"
                                android:text="Status"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/stage"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:background="@drawable/text"
                                android:text="Stage"

                                android:textColor="#ffffff" />
                        </LinearLayout>

                            <ListView
                                android:id="@+id/upgradelist"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:divider="#000"
                                android:dividerHeight="1dp"
                                android:cacheColorHint="#00000000"
                                android:fadingEdge="none">
                            </ListView>
                        </LinearLayout>

                    </HorizontalScrollView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <Button
                                    android:id="@+id/prev"
                                    android:text=" prev"
                                    android:background="#811517"
                                    android:textColor="#ffffff"
                                    android:textSize="15dp"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    />

                                <Button
                                    android:id="@+id/next"
                                    android:text="next "
                                    android:layout_marginLeft="20dp"
                                    android:background="#811517"
                                    android:textColor="#ffffff"
                                    android:textSize="15dp"

                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    />

                            </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Copyright © 2016 SapFund. All rights reserved." />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>