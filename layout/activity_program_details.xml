<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="58dp"
            android:layout_height="49dp"
            android:background="@drawable/arrowback"
            android:onClick="back"
            android:paddingLeft="40dp" />

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Program Details"
            app:titleTextColor="#fcfcfc"

            />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/hwicon"
            android:paddingLeft="40dp" />
    </LinearLayout>
    <!-- <android.support.v4.widget.DrawerLayout
         android:id="@+id/drawerLayout"
         android:layout_width="match_parent"
         android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fadingEdge="none"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linlyt"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                     />

                <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    >
                </android.support.v4.view.ViewPager>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f5a206"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:text="Program Details"
                    android:textColor="#fdfdfd"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#033512">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_decp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/listlayout"
                        android:padding="10dp"
                        android:hint="Description"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_dur"
                        android:layout_width="match_parent"
                        android:padding="10dp"

                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/listlayout"
                        android:hint="Durations"

                        android:textColor="#fdfdfd" />

                    <TextView
                        android:id="@+id/tv_benft"
                        android:layout_width="match_parent"
                        android:padding="10dp"

                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/listlayout"

                        android:hint="Benefits"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_temnl"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/listlayout"
                        android:padding="10dp"

                        android:hint="Testimonial"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/pics"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/listlayout"
                        android:padding="10dp"

                        android:hint="Pictures" />

                    <TextView
                        android:id="@+id/tv_stdt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/listlayout"
                        android:padding="10dp"
                        android:hint="Start / finish Date"

                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_pnts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/listlayout"
                        android:padding="10dp"

                        android:hint="Points for signup/ start"
                        android:textColor="#fffffe" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#dcdbda"

            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="edit"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/hm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Tasks"
                        android:textColor="#000"
                        android:textSize="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="graph"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/hwgrp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Group"
                        android:textColor="#000"
                        android:textSize="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="user"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/stat" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Stats"
                        android:textColor="#000"
                        android:textSize="10dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="grid"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/resp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Recipe "
                        android:textColor="#000"
                        android:textSize="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="sent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ed" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="EditProfile"
                        android:textColor="#000"
                        android:textSize="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="receive"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/receive" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Received"
                        android:textColor="#000"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


    <!-- <android.support.design.widget.NavigationView
         android:id="@+id/shitstuff"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_gravity="start"
         android:layout_marginTop="-24dp"
         android:paddingTop="40dp"
         app:itemTextColor="@color/black"

         app:menu="@menu/hwdraw" />


 </android.support.v4.widget.DrawerLayout>-->
</LinearLayout>